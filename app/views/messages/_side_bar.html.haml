.chat-side
  .side-header
    %h3.side-header__name
      = current_user.name
    %ul.side-header__lists
      %li.side-header__lists__new
        = link_to new_group_path do
          %i.fas.fa-edit
      %li.side-header__lists__edit
        = link_to edit_user_path(current_user) do
          %i.fas.fa-cog
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group-name
            = group.name
          .group-message
            = group.show_last_message